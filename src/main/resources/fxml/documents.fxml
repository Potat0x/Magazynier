<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="426.0" prefWidth="1078.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="magazynier.DocumentsController">
    <children>
        <HBox prefHeight="61.0" prefWidth="1031.0" VBox.vgrow="NEVER">
            <children>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#addDocument" prefWidth="105.0"
                        text="Dodaj">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@../img/document-new.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="editDocumentButton" contentDisplay="TOP" disable="true" mnemonicParsing="false"
                        onAction="#editDocumentProperties" prefWidth="105.0" text="Popraw">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@../img/format-justify-fill.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="showDocumentButton" contentDisplay="TOP" disable="true" mnemonicParsing="false"
                        onAction="#showDocumentProperties" prefWidth="105.0" text="Pokaż">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@../img/edit-paste.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="deleteDocumentButton" contentDisplay="TOP" disable="true" mnemonicParsing="false"
                        onAction="#deleteDocument" prefWidth="105.0" text="Usuń">
                    <graphic>
                        <ImageView>
                            <image>
                                <Image url="@../img/edit-delete.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <GridPane minHeight="-Infinity" prefHeight="61.0" prefWidth="501.0">
                    <columnConstraints>
                        <ColumnConstraints/>
                        <ColumnConstraints hgrow="NEVER" maxWidth="166.0" minWidth="10.0" prefWidth="114.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="302.0" minWidth="10.0" prefWidth="259.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="256.0" minWidth="10.0" prefWidth="129.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <HBox alignment="CENTER" spacing="3.0" GridPane.columnIndex="2" GridPane.halignment="CENTER"
                              GridPane.valignment="CENTER">
                            <children>
                                <TextField fx:id="contractorNameField" prefHeight="25.0" prefWidth="274.0"
                                           HBox.hgrow="ALWAYS"/>
                                <Button contentDisplay="CENTER" mnemonicParsing="false"
                                        onAction="#clearContractorNameField" opacity="0.76" prefHeight="25.0"
                                        prefWidth="25.0" text="⨉" textOverrun="CLIP">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <CheckBox fx:id="filteringByContractorChbox" mnemonicParsing="false" text="Kontrahent"
                                  GridPane.columnIndex="1"/>
                        <CheckBox fx:id="filteringByDateChbox" mnemonicParsing="false" text="Zakres dat"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="174.0" spacing="3.0"
                              GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <children>
                                <DatePicker fx:id="startDatePicker" prefHeight="25.0"/>
                                <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#clearStartDatePicker"
                                        opacity="0.76" prefHeight="25.0" prefWidth="25.0" text="⨉" textOverrun="CLIP">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                </Button>
                                <Label text="-"/>
                                <DatePicker fx:id="endDatePicker" prefHeight="25.0"/>
                                <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#clearEndDatePicker"
                                        opacity="0.76" prefHeight="25.0" prefWidth="25.0" text="⨉" textOverrun="CLIP">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <CheckBox fx:id="assortmentOutChbox" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" mnemonicParsing="false" selected="true"
                                  text="Wydania" GridPane.columnIndex="3">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </CheckBox>
                        <CheckBox fx:id="assortmentInChbox" maxHeight="1.7976931348623157E308"
                                  maxWidth="1.7976931348623157E308" mnemonicParsing="false" selected="true"
                                  text="Przyjęcia" GridPane.columnIndex="3" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets left="10.0"/>
                            </GridPane.margin>
                        </CheckBox>
                    </children>
                    <HBox.margin>
                        <Insets left="10.0"/>
                    </HBox.margin>
                </GridPane>
            </children>
        </HBox>
        <TableView fx:id="docTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                   onMouseClicked="#showDocument" prefWidth="1040.0" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateCol" minWidth="0.0" prefWidth="87.6796875" text="Data"/>
                <TableColumn fx:id="nameCol" prefWidth="93.5" text="Dokument"/>
                <TableColumn fx:id="contractorCol" prefWidth="129.0" text="Kontrahent"/>
                <TableColumn fx:id="netValCol" prefWidth="133.0" text="Wartość netto"/>
                <TableColumn fx:id="grossValCol" prefWidth="75.0" text="Wartość brutto"/>
                <TableColumn fx:id="profitCol" prefWidth="75.0" text="Zysk" visible="false"/>
                <TableColumn fx:id="worker" prefWidth="90.231689453125" text="Wystawił"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </children>
</VBox>
