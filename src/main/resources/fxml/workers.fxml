<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="magazynier.worker.WorkersController">
    <children>
        <TableView fx:id="workersTable" onKeyPressed="#updateForm" onMouseClicked="#updateForm"
                   tableMenuButtonVisible="true" HBox.hgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="firstNameCol" prefWidth="237.0" text="Imię"/>
                <TableColumn fx:id="lastNameCol" prefWidth="75.0" text="Nazwisko"/>
                <TableColumn fx:id="warehouseCol" prefWidth="165.0" text="Magazyn"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <VBox prefHeight="463.0" prefWidth="420.0" HBox.hgrow="NEVER">
            <children>
                <HBox prefHeight="61.0" prefWidth="507.0">
                    <children>
                        <Button fx:id="addButton" contentDisplay="TOP" mnemonicParsing="false"
                                onAction="#beginUserAdding" prefWidth="105.0" text="Dodaj">
                            <graphic>
                                <ImageView>
                                    <image>
                                        <Image url="@../img/contact-new.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button contentDisplay="TOP" disable="true" mnemonicParsing="false" prefWidth="105.0"
                                text="Komunikator">
                            <graphic>
                                <ImageView>
                                    <image>
                                        <Image url="@../img/internet-group-chat.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button contentDisplay="TOP" disable="true" mnemonicParsing="false" prefWidth="105.0"
                                text="Zamówienia">
                            <graphic>
                                <ImageView>
                                    <image>
                                        <Image url="@../img/edit-paste.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="deleteButton" contentDisplay="TOP" mnemonicParsing="false"
                                onAction="#deleteWorker" prefWidth="105.0" text="Usuń">
                            <graphic>
                                <ImageView>
                                    <image>
                                        <Image url="@../img/edit-delete.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
                <Label fx:id="formTitle" prefHeight="17.0" prefWidth="280.0" text="Szczegóły pracownika/Nowy pracownik">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                </Label>
                <GridPane fx:id="form" prefHeight="241.0" prefWidth="267.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="174.0" minWidth="10.0" prefWidth="101.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="294.0" minWidth="10.0" prefWidth="294.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Imie"/>
                        <Label text="Telefon" GridPane.rowIndex="5"/>
                        <Label text="Email" GridPane.rowIndex="4"/>
                        <TextField fx:id="firstName" onAction="#updateSelectedWorker" onKeyTyped="#setFormOutOfDate"
                                   GridPane.columnIndex="1"/>
                        <TextField fx:id="phone" onAction="#updateSelectedWorker" onKeyTyped="#setFormOutOfDate"
                                   GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                        <TextField fx:id="email" onAction="#updateSelectedWorker" onKeyTyped="#setFormOutOfDate"
                                   GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                        <TextField fx:id="lastName" onAction="#updateSelectedWorker" onKeyTyped="#setFormOutOfDate"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <TextField fx:id="pesel" onAction="#updateSelectedWorker" onKeyTyped="#setFormOutOfDate"
                                   GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                        <Label text="Nazwisko" GridPane.rowIndex="1"/>
                        <Label text="PESEL" GridPane.rowIndex="6"/>
                        <Label text="Adres" GridPane.rowIndex="3"/>
                        <TextField fx:id="street" onAction="#updateSelectedWorker" onKeyTyped="#setFormOutOfDate"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        <Label text="Miejscowość" GridPane.rowIndex="2"/>
                        <TextField fx:id="city" onAction="#updateSelectedWorker" onKeyTyped="#setFormOutOfDate"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </VBox.margin>
                </GridPane>
                <HBox alignment="CENTER_RIGHT" prefHeight="37.0" prefWidth="271.0">
                    <children>
                        <Button fx:id="saveButton" contentDisplay="TOP" disable="true" mnemonicParsing="false"
                                onAction="#saveUser" prefWidth="105.0" text="Zapisz">
                            <graphic>
                                <ImageView>
                                    <image>
                                        <Image url="@../img/go-bottom.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="cancelButton" contentDisplay="TOP" disable="true" mnemonicParsing="false"
                                onAction="#cancelUserAddOrEdit" prefWidth="105.0" text="Anuluj">
                            <graphic>
                                <ImageView>
                                    <image>
                                        <Image url="@../img/process-stop.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
